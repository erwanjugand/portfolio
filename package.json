{
  "name": "portfolio-v3",
  "version": "1.0.0",
  "description": "My personal portfolio",
  "author": "Erwan Jugand (@erwanjugand)",
  "private": true,
  "scripts": {
    "dev": "nuxt",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "eslint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
    "eslint:fix": "yarn eslint --fix",
    "stylelint": "stylelint **/*.{scss,vue}",
    "stylelint:fix": "yarn stylelint --fix",
    "svg:opti": "svgo --config=svgo.json static/ -r --indent=2 --pretty --multipass",
    "jpg:opti": "find static/images/ -type f -name '*.jpg' | xargs jpegoptim --strip-all",
    "png:opti": "find static/images/ -type f -name '*.png' | xargs optipng",
    "image:opti": "yarn run svg:opti && yarn run jpg:opti && yarn run png:opti"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/i18n": "^7.2.0",
    "@nuxtjs/sitemap": "^2.4.0",
    "@nuxtjs/style-resources": "^1.2.1",
    "directivue": "^0.1.5",
    "eslint": "^8.2.0",
    "nuxt": "^2.15.8",
    "vue-client-only": "^2.1.0",
    "vue-masonry": "^0.13.0"
  },
  "devDependencies": {
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/color-mode": "^2.1.1",
    "@nuxtjs/eslint-config-typescript": "^7.0.2",
    "@nuxtjs/google-analytics": "^2.4.0",
    "@nuxtjs/pwa": "^3.3.5",
    "@nuxtjs/svg": "^0.3.0",
    "fibers": "^5.0.0",
    "sass": "^1.43.4",
    "sass-loader": "10",
    "stylelint": "^13.13.1",
    "stylelint-config-sass-guidelines": "^8.0.0"
  }
}
